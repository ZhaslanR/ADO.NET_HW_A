<Window x:Class="ADO.NET_DZ_Aa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO.NET_DZ_Aa"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="120*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Login" FontSize="20" Grid.Column="1" Grid.Row="1"/>
        <TextBox Name="loginBox" FontSize="20" Grid.Column="1" Grid.Row="2"/>
        <TextBlock Text="Password" FontSize="20" Grid.Column="1" Grid.Row="3"/>
        <PasswordBox Name="passwordBox" FontSize="20" Grid.Column="1" Grid.Row="4"/>

        <Button Name="signInButton" Content="Sign In" FontSize="30" Grid.Column="1" Grid.Row="5" Click="signInButton_Click"/>
    </Grid>
</Window>
